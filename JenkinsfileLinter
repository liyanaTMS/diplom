pipeline {
    agent any

    stages {
        stage('Run Linter Tests') {
            steps {
              script {
                env.MY_APP_DIR = "/var/lib/docker/volumes/jenkins-data-flask/_data/workspace/${env.JOB_NAME}"
                echo "MY_APP_DIR is ${env.MY_APP_DIR}"
                sh "docker compose run lint"
              }
            }
        }
    }

    post {
        cleanup {
            echo 'Cleaning up...'
            deleteDir()
        }
    }
}
